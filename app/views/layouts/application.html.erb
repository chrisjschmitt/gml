<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <title><%= format_head_title(@title) %></title>
  <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
  <%= stylesheet_link_tag "application", "messages", "style", :cache => "all", :media => 'all' %>
  <%= stylesheet_link_tag 'print',       :media => 'print' %>
  <%= javascript_include_tag :defaults %>
</head>
<body>
	<div id="header" style='margin-top: 0px; padding-top: 0px;'>
		<%= render :partial => 'layouts/top_right' %>
		<h1>GiftMyList</h1>
		<%= render :partial => 'layouts/tabs' %>
	</div>		
	<div id="content">
		<div id="right">
			<%= render :partial => 'layouts/flash', :locals => { :flash => flash } %>
			<% unless @omit_h1 -%>
   			<h1><%=h @title %></h1>
			<% end -%>
			<%= yield %>
		</div>
		<div id="left">
			<div class="box">
					<h2>News :</h2>	
					<p>Sandy has added 4 items to her wish list<br />
					<i>One of the items is 30% off at Amazon</i></p>
					<p>You've been assigned Rusty in the Griswald Family Christmas exchange</p>
			</div>
			<div class="box">
						<% if @exchanges %>
						<h2>Exchanges :</h2>
						<ul>
						<% for exchange in @exchanges %>
							<li><%= link_to "#{exchange.name}", :controller => 'exchanges', :action => 'show_members', :id => exchange.id %></li>
						<% end %>
						<% end %>
						</ul>
			</div>
		  <div class="box">
				<div style="font-size: 0.8em;">Design by <a href="#">GML ltd.</a></div>
			</div>
		</div>
	</div>

</body>
</html>
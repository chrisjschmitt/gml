<h1>Editing Users</h1>

<% form_for :user, :url => { :action => :update }, :html => { :method => :put } do |f| %>
	<%= f.label :username %>
	<%= f.text_field :username, :size => 30 %>
  <%= f.label :type %>
	<%= f.text_field :type, :size => 30 %>
  <%= f.label :email %>
	<%= f.text_field :email, :size => 30 %>
	
	<% for exchange in @exchanges %>
		<div id ="check_box">
		  <%= check_box_tag "user[exchange_ids][]", exchange.id, @user.exchanges.include?(exchange) %>
		  <%= exchange.name %>
		</div>
	<% end %>

	<fieldset class="submit">
	  <p>
	    <%= f.submit "Update" %>
	  </p>
	</fieldset>
<% end %>

<br />
<%= link_to 'Add User', users_path %> |
<%= link_to 'Back', admin_users_path %>

<h1>Editing Users</h1>

<% form_for :user, :url => { :action => :update } do |f| %>
	<%= f.error_messages %>
	<%= f.text_field :username, :size => 30 %>
	<%= f.text_field :type, :size => 30 %>
	<%= f.text_field :email, :size => 30 %>
	
	<fieldset class="submit">
	  <p>
	    <%= f.submit "Update" %>
	  </p>
	</fieldset>
<% end %>

<br />
<%= link_to 'Add User', signup_path %> |
<%= link_to 'Back', admin_users_path %>
